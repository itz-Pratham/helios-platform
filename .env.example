# ==================================================
# HELIOS - Multi-Cloud Event Reconciliation Platform
# ==================================================
# Copy this file to .env and configure your settings
#
# DEPLOYMENT MODES:
# - production: Use real cloud services (requires credentials below)
# - demo: Use mocks for testing (no credentials needed)
# ==================================================

# ==================================================
# DEPLOYMENT MODE
# ==================================================
# Set to "production" to use real cloud services
# Set to "demo" to use mocks (default if credentials missing)
DEPLOYMENT_MODE=demo

# ==================================================
# Application
# ==================================================
APP_NAME=Helios
APP_VERSION=1.0.0
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ==================================================
# API
# ==================================================
API_HOST=0.0.0.0
API_PORT=8001

# ==================================================
# Database (PostgreSQL)
# ==================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=helios
POSTGRES_USER=helios
POSTGRES_PASSWORD=helios_password
DATABASE_URL=postgresql+asyncpg://helios:helios_password@localhost:5433/helios

# ==================================================
# Redis
# ==================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ==================================================
# Kafka/Redpanda
# ==================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:19092
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:18081
KAFKA_TOPIC_PREFIX=helios

# ==================================================
# AWS Configuration
# ==================================================
# AWS Credentials (leave empty for demo mode)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# AWS EventBridge
AWS_EVENTBRIDGE_BUS_NAME=helios-events
AWS_EVENT_SOURCE=helios.platform

# ==================================================
# GCP Configuration
# ==================================================
# GCP Project (leave empty for demo mode)
GCP_PROJECT_ID=

# GCP Pub/Sub
GCP_PUBSUB_TOPIC=helios-events
GCP_PUBSUB_SUBSCRIPTION=helios-subscription

# Path to service account key file (JSON)
# Example: /path/to/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=

# ==================================================
# Azure Configuration
# ==================================================
# Azure Event Grid (leave empty for demo mode)
AZURE_EVENT_GRID_ENDPOINT=
AZURE_EVENT_GRID_ACCESS_KEY=
AZURE_EVENT_GRID_TOPIC_HOSTNAME=
AZURE_EVENT_SUBJECT_PREFIX=helios

# Azure Subscription (Optional)
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=helios-rg
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# ==================================================
# Reconciliation Settings
# ==================================================
RECONCILIATION_WINDOW_SECONDS=30
RECONCILIATION_MAX_RETRIES=3

# ==================================================
# Self-Healing Settings
# ==================================================
AUTO_SCALE_ENABLED=true
LAG_THRESHOLD=5000
DLQ_GROWTH_THRESHOLD=100
CIRCUIT_BREAKER_THRESHOLD=10

# ==================================================
# Monitoring & Observability
# ==================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000

# Jaeger (Distributed Tracing)
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# ==================================================
# Security (Optional)
# ==================================================
# SECRET_KEY=your-secret-key-for-jwt
# ALLOWED_ORIGINS=https://your-dashboard-domain.com

# ==================================================
# Notes:
# ==================================================
# 1. NEVER commit .env file with real credentials to git
# 2. Use environment variables or secret management in production
# 3. The system auto-detects credentials and switches modes
# 4. Missing credentials automatically fall back to demo/mock mode
# 5. For production setup, see: docs/guides/PRODUCTION_SETUP.md
